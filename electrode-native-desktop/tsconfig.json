{
  "compilerOptions": {
    "target": "es2015",
    "rootDir": "./src",
    "outDir": "dist",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],"module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "ern-core": ["../ern-core/src/index.ts"],
      "ern-cauldron-api": ["../ern-cauldron-api/src/index.ts"] 
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist"
  ],
  "typeAcquisition": {
    "enable": true
  }
}